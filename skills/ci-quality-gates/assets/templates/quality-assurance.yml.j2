# Code Quality Assurance Workflow
# Generated by ci-quality-gates skill

name: Code Quality

on:
  push:
    branches: [{{ config.deploy.get('main_branch', 'main') }}, develop]
  pull_request:
    branches: [{{ config.deploy.get('main_branch', 'main') }}]

env:
  PYTHON_VERSION: "{{ python_version | default('3.11') }}"
  NODE_VERSION: "{{ node_version | default('20') }}"

jobs:
{% if 'python' in [project.languages.primary] + project.languages.get('secondary', []) %}
  python-quality:
    name: Python Quality Checks
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: ${{ env.PYTHON_VERSION }}
          cache: 'pip'

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install flake8 black isort mypy bandit

      - name: Check formatting with Black
        run: black --check --diff .

      - name: Check imports with isort
        run: isort --check-only --diff .

      - name: Lint with flake8
        run: |
          flake8 . --count --select=E9,F63,F7,F82 --show-source --statistics
          flake8 . --count --max-line-length={{ config.quality_gates.python.line_length | default(100) }} --statistics

{% if config.quality_gates.python.get('mypy', true) %}
      - name: Type check with mypy
        run: mypy src/ --ignore-missing-imports
        continue-on-error: true
{% endif %}

{% if config.quality_gates.python.get('bandit', true) %}
      - name: Security check with bandit
        run: bandit -r src/ -ll
        continue-on-error: true
{% endif %}
{% endif %}

{% if 'javascript' in [project.languages.primary] + project.languages.get('secondary', []) %}
  javascript-quality:
    name: JavaScript/TypeScript Quality Checks
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Lint with ESLint
        run: npx eslint . --ext .ts,.tsx,.js,.jsx

      - name: Check formatting with Prettier
        run: npx prettier --check .

      - name: Type check
        run: npx tsc --noEmit
{% endif %}

{% if 'go' in [project.languages.primary] + project.languages.get('secondary', []) %}
  go-quality:
    name: Go Quality Checks
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Set up Go
        uses: actions/setup-go@v5
        with:
          go-version: '{{ go_version | default("1.21") }}'

      - name: Check formatting
        run: |
          if [ -n "$(gofmt -l .)" ]; then
            echo "Go files are not formatted:"
            gofmt -l .
            exit 1
          fi

      - name: Run go vet
        run: go vet ./...

      - name: Run golangci-lint
        uses: golangci/golangci-lint-action@v4
        with:
          version: latest
{% endif %}

{% if 'rust' in [project.languages.primary] + project.languages.get('secondary', []) %}
  rust-quality:
    name: Rust Quality Checks
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Set up Rust
        uses: dtolnay/rust-toolchain@stable
        with:
          components: rustfmt, clippy

      - name: Check formatting
        run: cargo fmt --check

      - name: Run clippy
        run: cargo clippy -- -D warnings

      - name: Run cargo check
        run: cargo check --all-targets
{% endif %}

  pre-commit:
    name: Pre-commit Hooks
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: ${{ env.PYTHON_VERSION }}

      - name: Run pre-commit
        uses: pre-commit/action@v3.0.1
